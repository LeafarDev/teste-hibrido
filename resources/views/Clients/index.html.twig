{% extends "/Layouts/app.html.twig" %}

{% block title %}Clients{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    {% if(success) %}
        <div class="alert alert-success" role="alert">
            {{ success }}
        </div>
    {% endif %}
    {% if(failure) %}
        <div class="alert alert-warning" role="alert">
            {{ failure }}
        </div>
    {% endif %}
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" href="clients/create" role="button"><i class="fa fa-plus"></i> Add
            Client</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Cpf</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Options</th>
        </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <th scope="row">{{ client.id }}</th>
                <td>{{ client.name }}</td>
                <td>{{ client.cpf }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.phone }}</td>
                <td>
                    <form action="/clients/{{ client.id }}/delete" method="post">
                        <a href="clients/{{ client.id }}" title="Mostrar">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="clients/{{ client.id }}/edit" title="Editar">
                            <i class="fa fa-edit"></i>
                        </a>
                        <button class="btn btn-link " title="Excluir" type="submit">
                            <i class="fa fa-trash text-danger"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}